@model DotNetCore.Web.Areas.Admin.Models.EmailAccounts.EmailAccountModel
@{
    ViewData["Title"] = "Update";
}
<div class="page-title">
    <div class="title_left">
        <h3>Edit email account</h3>
    </div>
</div>
<div class="clearfix"></div>
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <form action="/admin/emailaccount/update" method="post" class="form-horizontal form-label-left">
            <div class="x_panel">
                <div class="x_content">
                    @Html.HiddenFor(x => x.Id)
                    @Html.Partial("_CreateOrUpdate", Model)
                </div>
            </div>
            <div class="x_panel">
                <div class="form-group">
                    @Html.LabelFor(x => x.SendTestEmailTo, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        @Html.EditorFor(x => x.SendTestEmailTo, new { htmlAttributes = new { @class = "form-control col-md-7 col-xs-12" } })
                        @Html.ValidationMessageFor(x => x.SendTestEmailTo, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                        <input type="submit" name="sendtestemail" class="btn btn-success" value="send test email" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <script src="~/js/site.validation.min.js"></script>
}